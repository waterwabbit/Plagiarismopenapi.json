      { title: "The Dragon Prince", platform: "Netflix", type: "Series", category: "Fantasy/Adventure", minAge: 8, maxAge: 13 },
      { title: "The Fairly OddParents: A New Wish", platform: "Netflix", type: "Series", category: "Magic/Comedy", minAge: 6, maxAge: 11 },
      { title: "Pokémon Horizons", platform: "Netflix", type: "Series", category: "Adventure/Action", minAge: 6, maxAge: 12 },
      { title: "7 Bears", platform: "Netflix", type: "Series", category: "Fantasy/Adventure", minAge: 5, maxAge: 10 },
      { title: "Barbie Mysteries: Beach Detectives", platform: "Netflix", type: "Series", category: "Mystery/Adventure", minAge: 4, maxAge: 10 },
      { title: "Building the Band", platform: "Netflix", type: "Series", category: "Music/Competition", minAge: 8, maxAge: 13 },
      { title: "Miraculous: Tales of Ladybug & Cat Noir", platform: "Netflix", type: "Series", category: "Superhero/Action", minAge: 7, maxAge: 12 }
    ];
    function getEligible(age) { return catalogue.filter(item => age >= item.minAge && age <= item.maxAge); }
    function randomChoice(arr) { return arr[Math.floor(Math.random() * arr.length)]; }
    function pickRandomForAge(age) {
      const eligible = getEligible(age);
      if (!eligible.length) return null;
      const platforms = [...new Set(eligible.map(item => item.platform))];
      const platform = randomChoice(platforms);
      const byPlatform = eligible.filter(item => item.platform === platform);
      const types = [...new Set(byPlatform.map(item => item.type))];
      const type = randomChoice(types);
      const byType = byPlatform.filter(item => item.type === type);
      const categories = [...new Set(byType.map(item => item.category))];
      const category = randomChoice(categories);
      const byCategory = byType.filter(item => item.category === category);
      const titleItem = randomChoice(byCategory);
      return { platform, type, category, ...titleItem };
    }
    document.getElementById('randomizerForm').addEventListener('submit', function (e) {
      e.preventDefault();
      const age = parseInt(document.getElementById('age').value, 10);
      const resultDiv = document.getElementById('result');
      if (isNaN(age) || age < 4 || age > 13) {
        resultDiv.style.display = 'block';
        resultDiv.textContent = 'Please enter a valid age between 4 and 13.';
        return;
      }
      const recommendation = pickRandomForAge(age);
      if (!recommendation) {
        resultDiv.style.display = 'block';
        resultDiv.textContent = 'No suitable titles found for this age.';
        return;
      }
      resultDiv.style.display = 'block';
      resultDiv.innerHTML = `<div class="heading">Recommendation</div>
        <p><strong>Platform:</strong> ${recommendation.platform}</p>
        <p><strong>Type:</strong> ${recommendation.type}</p>
        <p><strong>Category:</strong> ${recommendation.category}</p>
        <p><strong>Title:</strong> ${recommendation.title}</p>
        <p><strong>Recommended ages:</strong> ${recommendation.minAge}–${recommendation.maxAge}</p>`;
    });
  </script>
